[user]
	name = {{ .name }}
	email = {{ .email }}
	signingkey = {{ .signingkey }}
[core]
  editor = {{ .editor }}
  autocrlf = true
  pager = delta
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    dark = true
    line-numbers = true
    side-by-side = true
    true-color = always
[color]
	diff = auto
	status = auto
	branch = auto
[init]
	defaultBranch = main
[commit]
  gpgsign = true
